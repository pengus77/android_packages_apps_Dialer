<?xml version="1.0" encoding="utf-8"?>

<resources>

  <style name="Dialer.ThemeBase.ActionBar" parent="Dialer.Dark.ThemeBase.ActionBar">
    <item name="android:windowBackground">@*android:color/primary_dark_device_default_settings</item>
    <item name="android:background">@*android:color/primary_dark_device_default_settings</item>
    <item name="android:colorBackground">@*android:color/primary_dark_device_default_settings</item>
    <item name="android:textColorPrimary">@*android:color/accent_device_default_dark</item>
    <item name="android:textColorSecondary">@*android:color/accent_device_default_dark</item>
    <item name="android:colorAccent">@*android:color/accent_device_default_dark</item>
  </style>

  <style name="Dialer.ThemeBase.NoActionBar" parent="Dialer.Dark.ThemeBase.NoActionBar" />
  <style name="Dialer.ThemeBase" parent="Dialer.Dark.ThemeBase" />
  <style name="SettingsStyle" parent="Dialer.ThemeBase.ActionBar" />

  <style name="Dialer.Dark.ThemeBase" parent="Dialer.Dark">
    <!-- These values should be used to color all backgrounds. -->
    <item name="android:colorBackground">@*android:color/primary_dark_device_default_settings</item>
    <item name="android:colorBackgroundFloating">@*android:color/primary_dark_device_default_settings</item>

    <item name="android:colorButtonNormal">@*android:color/accent_device_default_dark</item>

    <!-- These values should be used to set text color. -->
    <!-- swap text colors. -->
    <item name="android:textColor">@*android:color/accent_device_default_dark</item>
    <item name="android:textColorPrimary">@*android:color/accent_device_default_dark</item>
    <item name="android:textColorSecondary">@*android:color/accent_device_default_dark</item>
    <item name="android:textColorPrimaryInverse">@*android:color/accent_device_default_dark</item>
    <item name="android:textColorSecondaryInverse">@*android:color/accent_device_default_dark</item>
    <item name="android:textColorHint">@*android:color/accent_device_default_dark</item>

    <!-- These will be automatically used to color most Appcompat/Material widgets. -->
    <item name="android:colorPrimary">@*android:color/accent_device_default_dark</item>
    <item name="colorPrimary">@*android:color/accent_device_default_dark</item>
    <item name="android:colorPrimaryDark">@*android:color/accent_device_default_dark</item>
    <item name="colorPrimaryDark">@*android:color/accent_device_default_dark</item>
    <item name="android:colorAccent">@*android:color/accent_device_default_dark</item>
    <item name="colorAccent">@*android:color/accent_device_default_dark</item>

    <!-- Used to automatically style check/selected checkbox, switches and radio buttons -->
    <item name="colorControlActivated">@*android:color/accent_device_default_dark</item>

    <!-- Dialer specific attributes. -->
    <item name="colorIcon">@*android:color/accent_device_default_dark</item>
    <item name="colorIconSecondary">@*android:color/accent_device_default_dark</item>
    <item name="colorTextOnUnthemedDarkBackground">@*android:color/accent_device_default_dark</item>
    <item name="colorIconOnUnthemedDarkBackground">@*android:color/accent_device_default_dark</item>
    <item name="colorPrimary20pct">@*android:color/primary_dark_device_default_settings</item>
  </style>

  <style name="MainActivityTheme" parent="MainActivityTheme.Dark"/>
  <style name="MainActivityThemeBase" parent="MainActivityThemeBase.Dark"/>
  <style name="Theme.InCallScreen.Light" parent="Theme.InCallScreen"/>

  <style name="MainActivityTheme.Dark" parent="MainActivityThemeBase.Dark">
    <!-- Used to change the navigation bar color -->
    <!--item name="android:windowLightNavigationBar">true</item-->
    <item name="android:navigationBarColor">?android:attr/colorBackgroundFloating</item>
    <item name="android:navigationBarDividerColor">?android:attr/colorBackground</item>
  </style>

  <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
    <!-- TODO(a bug): figure out why ?android:attr/colorPrimary doesn't work here -->
    <item name="android:colorAccent">@*android:color/accent_device_default_dark</item>
    <item name="colorAccent">@*android:color/accent_device_default_dark</item>
    <item name="android:background">@*android:color/primary_dark_device_default_settings</item>
    <item name="android:textColorPrimary">@*android:color/accent_device_default_dark</item>
    <item name="android:textColorSecondary">@*android:color/accent_device_default_dark</item>
  </style>

  <style name="DialtactsTheme" parent="Dialer.ThemeBase.ActionBar">
    <!-- todo(calderwoodra): fill this in with dialpad theme and call log card theme -->
    <item name="android:background">?android:attr/colorBackground</item>
    <item name="background">?android:attr/colorBackground</item>
    <item name="android:navigationBarDividerColor">?android:attr/colorBackground</item>
  </style>

</resources>
